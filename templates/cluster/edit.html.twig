{% extends 'layout.html.twig' %}

{% set section = 'admin' %}
{% set subSection = 'clusters' %}

{% block pageContent %}
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">{{ pageTitle }}</h6>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    <div class="form-group">
                        <div class="row">
                            <label class="col-sm-4 control-label col-sm-2 control-label">{{ form_label(form.name) }}</label>
                            <div class=" col-sm-9 ">
                                {{ form_widget(form.name) }}
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <label class="col-sm-4 control-label col-sm-2 control-label">{{ form_label(form.servers) }}</label>
                            <div class=" col-sm-9 ">
                                {{ form_widget(form.servers) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <a href="{{ path("cluster_list") }}" class="btn btn-outline btn-warning">
                <i class="fa fa-ban"></i> {{ "action.cancel" | trans | capitalize }}
            </a>
            <button type="submit" class="btn btn-outline btn-info">
                <i class="fa fa-save"></i> {{ "action.save" | trans | capitalize }}
            </button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}


{% block javascript %}
<script type="text/javascript" >
    $(document).ready(function () {
        $('select.select2').select2();
    });
</script>
{% endblock %}
